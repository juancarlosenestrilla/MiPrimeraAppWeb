
@{
    ViewBag.Title = "Curso";
}

<h2>Curso</h2>
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/cssPropio.css" rel="stylesheet" />

<label>Ingrese Nombre</label>
<input type="text" id="txtnombre" />

<input type="button" id="btnBuscar" value="Buscar" class="btn btn-primary" />
<input type="button" id="btnLimpiar" value="Limpiar" class="btn btn-success" />

<br />

<!-- Trigger the modal with a button -->
<button  type="button" onclick="abrirModal(0)" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Agregar nuevo registro</button>


<div id="tabla">


</div>






<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%; margin:auto">
                    <tr>
                        <td width="40%">Id curso</td>
                        <td width="60%"><input class="borrar form-control" type="text"  id="txtidCurso" readonly /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese nombre curso</td>
                        <td width="60%"><input class="borrar obligatorio form-control"  type="text"  id="txtNombre" /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese descripción curso</td>
                        <td width="60%"><input class="borrar obligatorio form-control" type="text"  id="txtDescripcion" /></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button id="btnCancelar"  type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button onclick="Agregar()" type="button" class="btn btn-success" >Aceptar</button>
            </div>
        </div>

    </div>
</div>




<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Curso.js"></script>
<script src="~/Scripts/datatables.min.js"></script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>